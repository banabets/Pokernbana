# Configuración de Producción para Poker Game

# Base de Datos PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=poker_game
DB_USER=poker_user
DB_PASSWORD=cambiar_esta_contraseña_segura_123456789

# JWT Secret (generar uno único y seguro)
JWT_SECRET=tu_jwt_secret_muy_seguro_para_produccion_2025_poker_game

# Servidor
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# CORS (configurar con tu dominio)
ALLOWED_ORIGINS=https://poker.tu-dominio.com,https://www.poker.tu-dominio.com

# Game Configuration
DEFAULT_STARTING_BALANCE=2000
MAX_ROOMS_PER_USER=5
SESSION_TIMEOUT_MINUTES=120

# File Paths
SUBSCRIPTIONS_FILE=./data/userSubscriptions.json
STORE_CREDITS_FILE=./data/userStoreCredits.json

# SSL/HTTPS (para producción)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/server.log

# Backup (opcional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Todos los días a las 2 AM
BACKUP_RETENTION_DAYS=30
